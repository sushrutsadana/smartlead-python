{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "buildCommand": "pip install -r requirements.txt",
                "useBuildCache": false
            }
        }
    ],
    "routes": [
        {
            "src": "/docs",
            "dest": "api/index.py"
        },
        {
            "src": "/openapi.json",
            "dest": "api/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "api/index.py"
        }
    ],
    "env": {
        "PYTHONPATH": "."
    }
} 